<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Union"
        android:layout_width="816dp"
        android:layout_height="718dp"
        android:layout_marginHorizontal="@android:dimen/app_icon_size"
        android:layout_marginBottom="16dp"
        android:src="@drawable/Union"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteX="-190dp" />

    <TextView
        android:id="@+id/startedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/enter_your_username_password"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/startedText"
        tools:layout_editor_absoluteX="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="540dp"
        android:text="Password"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/Union"
        tools:layout_editor_absoluteX="34dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="504dp"
        android:text="@string/string"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Union"
        app:layout_constraintRight_toRightOf="@id/username" />

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Username"
        android:textSize="26sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toTopOf="@+id/string"
        app:layout_constraintStart_toStartOf="@id/username"
        app:layout_constraintBottom_toBottomOf="@id/Union"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/string2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="672dp"
        android:text="@string/string"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/Union"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginBottom="260dp"
        android:backgroundTint="@color/black"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/forgotten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgotten Password"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/Login"
        app:layout_constraintBaseline_toBottomOf="@id/Login"
        app:layout_constraintRight_toRightOf="@id/Login"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or Create a New Account"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/forgotten"
        app:layout_constraintTop_toBottomOf="@id/forgotten"
        tools:layout_editor_absoluteX="16dp"
        app:layout_goneMarginTop="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
